{
  "name": "react-startpage",
  "version": "0.1.0",
  "description": "A React library that provides tools and components to facilitate the process of creating a browser start page.",
  "author": "PrettyCoffee",
  "license": "MIT",
  "repository": "PrettyCoffee/react-startpage",
  "keywords": [
    "react",
    "startpage",
    "utils",
    "ui-components",
    "react-context",
    "react-hooks",
    "hooks"
  ],
  "source": "src/index.ts",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build -- watch",
    "prebuild": "rimraf dist",
    "build": "microbundle --no-compress --sourcemap false --jsx React.createElement --name react-startpage",
    "test": "jest --watch",
    "test:all": "jest",
    "lint": "eslint src docs/src",
    "lint:fix": "npm run lint -- --fix",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "validate": "npm run lint && npm run test:all && npm run build && npm run size"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "color": "^4.0.1"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "^11.2.0",
    "@size-limit/preset-small-lib": "^5.0.4",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.2.1",
    "@types/color": "^3.0.2",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.12.3",
    "eslint-plugin-unused-imports": "^1.1.4",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "microbundle": "^0.13.3",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "size-limit": "^5.0.4",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  },
  "engines": {
    "node": ">=14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.esm.js",
      "limit": "10 KB"
    }
  ]
}
