{
  "name": "react-startpage",
  "version": "0.1.0",
  "description": "A React library which provides components that help creating browser startpages in react.",
  "author": "PrettyCoffee",
  "license": "MIT",
  "repository": "PrettyCoffee/react-startpage",
  "keywords": [
    "react",
    "startpage",
    "library",
    "components",
    "hooks"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/react-startpage.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint src docs/src",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.3",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "husky": "^7.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^5.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/react-startpage.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-startpage.esm.js",
      "limit": "10 KB"
    }
  ]
}
